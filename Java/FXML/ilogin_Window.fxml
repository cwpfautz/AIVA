<?xml version="1.0" encoding="UTF-8"?>
<!-- package FXML -->

<!-- javafx libraries -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<!-- window -->
<GridPane alignment="center" hgap="10.0" vgap="10.0" prefWidth="231.0" prefHeight="100.0"
          xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controllers.login_Controller">

    <!-- window contents -->
    <Label id="incorrect" text="ACCESS DENIED" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label fx:id="loginRef" text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="username" promptText="username" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <PasswordField fx:id="password" promptText="password" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label id="incorrect" text="Invalid Username or Password" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Button fx:id="submitButton" text="Submit" GridPane.rowIndex="4" GridPane.columnIndex="0"
            onAction="#handleSubmitButton" defaultButton="true" />
    <CheckBox text="Remember me" GridPane.rowIndex="4" GridPane.columnIndex="1" selected="true" />

</GridPane>
